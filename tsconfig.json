{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "app/**/*", "lib/**/*", "src/components/**/*", "src/contexts/**/*", "src/hooks/**/*", "src/lib/**/*", "src/types/**/*", "src/utils/**/*", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "src/pages/**/*", "src/App.tsx", "src/main.tsx", "src/components/landing/CallToAction.tsx", "src/components/landing/SubtlePricingSection.tsx", "src/components/Navbar.tsx"]
}